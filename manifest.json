{
  "manifest_version": 3,
  "name": "DeepLearn Sidebar",
  "version": "1.1",
  "description": "Deep Learning Sidebar for YouTube, Bilibili, and X with Zettelkasten notes and Mechanical Intuition.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://generativelanguage.googleapis.com/*",
    "https://www.youtube.com/*",
    "https://www.bilibili.com/*",
    "https://twitter.com/*",
    "https://x.com/*"
  ],
  "background": {
    "service_worker": "background/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/*",
        "https://www.bilibili.com/*",
        "https://twitter.com/*",
        "https://x.com/*"
      ],
      "js": ["content/content.js"],
      "run_at": "document_idle"
    }
  ]
}
